<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="generalui.CandidatesView">
    <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Candidates">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <ListView fx:id="candidatesList" layoutX="386.0" layoutY="13.0" prefHeight="306.0" prefWidth="200.0"/>
                <Button fx:id="addCandidate" layoutX="14.0" layoutY="326.0" mnemonicParsing="false" text="Add"/>
                <TextField fx:id="candidateFirstName" layoutX="14.0" layoutY="14.0"/>
                <TextField fx:id="candidateLastName" layoutX="14.0" layoutY="55.0"/>
                <ChoiceBox fx:id="candidateAge" layoutX="208.0" layoutY="14.0" prefHeight="27.0" prefWidth="51.0"/>
                <TextField fx:id="prevJob" layoutX="14.0" layoutY="101.0"/>
                <TextField fx:id="expectedSalary" layoutX="14.0" layoutY="144.0"/>
                <ChoiceBox fx:id="expectedJobRole" layoutX="208.0" layoutY="55.0" prefWidth="150.0"/>
                <Button fx:id="deleteCandidate" layoutX="68.0" layoutY="326.0" mnemonicParsing="false" text="Delete"/>
                <Button fx:id="updateCandidate" layoutX="139.0" layoutY="326.0" mnemonicParsing="false" text="Update"/>
                <ChoiceBox fx:id="candidateLocation" layoutX="208.0" layoutY="101.0" prefWidth="150.0"/>
            </AnchorPane>
        </Tab>
        <Tab text="Interviews">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <ListView fx:id="interviewsList" layoutX="14.0" layoutY="14.0" prefHeight="340.0" prefWidth="200.0"/>
                <ChoiceBox fx:id="interviewCandidate" layoutX="300.0" layoutY="14.0" prefWidth="150.0"/>
                <ChoiceBox fx:id="interviewInterviewer" layoutX="300.0" layoutY="56.0" prefWidth="150.0"/>
                <ChoiceBox fx:id="interviewType" layoutX="300.0" layoutY="104.0" prefWidth="150.0"/>
                <ChoiceBox fx:id="interviewMark" layoutX="300.0" layoutY="150.0" prefWidth="150.0"/>
                <Label layoutX="226.0" layoutY="19.0" text="Candidate"/>
                <Label layoutX="226.0" layoutY="61.0" text="Interviewer"/>
                <Label layoutX="226.0" layoutY="109.0" text="Type"/>
                <Label layoutX="226.0" layoutY="155.0" text="Mark"/>
                <Button fx:id="addInterview" layoutX="226.0" layoutY="199.0" mnemonicParsing="false" text="Add"/>

            </AnchorPane>
        </Tab>
        <Tab text="Job roles">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <ListView fx:id="jobRolesList" layoutX="14.0" layoutY="14.0" prefHeight="340.0" prefWidth="200.0"/>
                <TextField fx:id="jobRoleName" layoutX="233.0" layoutY="14.0" prefHeight="27.0" prefWidth="199.0"/>
                <TextArea fx:id="jobRoleDescription" layoutX="233.0" layoutY="58.0" prefHeight="200.0"
                          prefWidth="200.0"/>
                <Button fx:id="addJobRole" layoutX="233.0" layoutY="281.0" mnemonicParsing="false" text="Add"/>
                <TextField fx:id="jobRoleSalary" layoutX="442.0" layoutY="14.0" prefHeight="27.0" prefWidth="143.0"/>
            </AnchorPane>
        </Tab>
    </TabPane>
</AnchorPane>
